# Copy to .env and adjust values as needed.

# Auth secrets
NLCO_AUTH_SECRET="change-me"
NLCO_AUTH_DB_URI="sqlite+aiosqlite:///./nlco_auth.db"
NLCO_AUTH_COOKIE_SECURE="false"
NLCO_AUTH_COOKIE_MAX_AGE="604800"

# GitHub OAuth (optional)
NLCO_GITHUB_CLIENT_ID=""
NLCO_GITHUB_CLIENT_SECRET=""
NLCO_GITHUB_REDIRECT_URL="http://127.0.0.1:48123/auth/github/callback"
NLCO_GITHUB_STATE_SECRET=""

# Runtime
NLCO_PYTHON_BIN="python3"
NLCO_WEB_PORT="48123"
NLCO_WEB_HOST="127.0.0.1"
NLCO_WEB_RELOAD="true"
